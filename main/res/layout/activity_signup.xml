<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context="org.eliconcepts.geekking.MainActivity">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        app:srcCompat="@drawable/logo"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="95dp"
        android:layout_height="95dp"
        app:srcCompat="@mipmap/logo"
        android:layout_alignTop="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="55dp" />

    <EditText
        android:id="@+id/editname"
        android:layout_width="280dp"
        android:layout_height="40dp"
        android:ems="10"
        android:textColor="#ffff"
        android:inputType="textPersonName"
        android:hint="Username"
        android:textColorHint="#ffff"
        android:background="#0F000000"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/mail"
        android:layout_marginBottom="7dp"/>

    <EditText
        android:id="@+id/editpass"
        android:layout_width="280dp"
        android:layout_height="40dp"
        android:hint="Password"
        android:textColorHint="#ffff"
        android:background="#0F000000"
        android:ems="10"
        android:textColor="#ffff"
        android:inputType="textPassword"
        android:layout_above="@+id/Confpass"
        android:layout_marginBottom="7dp"
        android:layout_alignStart="@+id/editname"
       />

    <EditText
        android:id="@+id/Confpass"
        android:layout_width="280dp"
        android:layout_height="40dp"
        android:hint="Confirm Password"
        android:textColorHint="#ffff"
        android:background="#0F000000"
        android:ems="10"
        android:textColor="#ffff"
        android:inputType="textPassword"
        android:layout_above="@+id/imgsignup"
        android:layout_alignStart="@+id/editname"
        android:layout_marginBottom="40dp" />

    <EditText
        android:id="@+id/mail"
        android:layout_width="280dp"
        android:layout_height="40dp"
        android:hint="Email Address"
        android:textColorHint="#ffff"
        android:background="#0F000000"
        android:ems="10"
        android:textColor="#ffff"
        android:inputType="textPassword"
        android:layout_above="@+id/editpass"
        android:layout_alignStart="@+id/editname"
        android:layout_marginBottom="7dp" />

    <Button
        android:id="@+id/imgsignup"
        android:layout_width="300dp"
        android:layout_height="32dp"
        android:background="@drawable/signuppress"
        android:fontFamily="sans-serif"
        android:text="Sign Up"
        android:textAllCaps="false"
        android:textColor="#ffff"
        android:textSize="18dp"
        android:textStyle="normal"
        android:layout_above="@+id/textView4"
        android:layout_marginBottom="30dp"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome!"
        android:textColor="#ffff"
        android:textSize="16dp"
        android:layout_above="@+id/textView5"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="communicate with people all over the"
        android:textColor="#ffff"
        android:textSize="14dp"
        android:layout_above="@+id/textView6"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="world with your emotions!"
        android:textColor="#ffff"
        android:textSize="14dp"
        android:layout_marginBottom="12dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/imageView" />



</RelativeLayout>