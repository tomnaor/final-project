<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/waves"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:background="@drawable/wave1"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="141dp"
        android:background="@drawable/wave_music"
        android:layout_alignParentBottom="true"
        />

    <ImageView
        android:id="@+id/player"
        android:layout_width="90dp"
        android:layout_height="75dp"
        android:background="@drawable/play"
        android:layout_alignEnd="@+id/btn_music_nav"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="80dp" />

    <TextView
        android:layout_width="80dp"
        android:layout_height="135dp"
        android:layout_marginEnd="5dp"
        android:layout_toStartOf="@+id/player"
        android:layout_alignTop="@+id/player"
        android:layout_alignStart="@+id/btn_music_nav"
        android:lineSpacingExtra="3sp"
        android:text="@string/explain_music"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#C9C9C9"
        android:textSize="15dp" />

    <Button
        android:id="@+id/btn_music_nav"
        android:layout_width="215dp"
        android:layout_height="32dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="90dp"
        android:background="@drawable/music_button_nav"
        android:fontFamily="sans-serif"
        android:text="Play!"
        android:textAllCaps="false"
        android:textColor="#ffff"
        android:textSize="17dp" />


</RelativeLayout>
