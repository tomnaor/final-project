<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.eliconcepts.geekking.MainActivity">

    <!-- Comment this ImageView after you have handled the image background with Java at the Activity-->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/background"
        android:scaleType="centerCrop"
        android:id="@+id/formBack" />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="90dp"
        android:id="@+id/formLogo"
        android:src="@drawable/logo"
        android:scaleType="fitCenter"

        android:layout_marginTop="90dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:id="@+id/formLogo2"
        android:src="@mipmap/logo"
        android:scaleType="fitCenter"

        android:layout_marginTop="165dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:orientation="vertical"
        android:weightSum="1"
        android:layout_marginBottom="7dp"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp"
        android:layout_above="@+id/linearLayout"
        android:layout_centerHorizontal="true">

        <EditText

            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:background="@android:color/transparent"
            android:hint="Username"
            android:textSize="20dp"
            android:textColorHint="#ffff"
            android:textColor="#ffff"
            android:maxLines="1"
            android:layout_marginTop="100dp"/>
        <View
            android:layout_gravity="center"
            android:layout_width="320dp"
            android:layout_height="1dp"
            android:background="#ffff"/>


        <EditText
            android:shadowColor="#ffff"
            android:textColor="#ffff"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:background="@android:color/transparent"
            android:hint="Password"
            android:textSize="20dp"
            android:textColorHint="#ffff"
            android:maxLines="1"
            android:layout_marginTop="13dp" />

        <View
            android:layout_gravity="center"
            android:layout_width="320dp"
            android:layout_height="1dp"
            android:background="#ffff" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="158dp"
        android:id="@+id/linearLayout">

        <LinearLayout
            android:layout_width="395dp"
            android:layout_height="140dp"
            android:layout_marginLeft="12dp"
            android:orientation="vertical"
            android:weightSum="1"
            tools:layout_editor_absoluteY="8dp"
            tools:layout_editor_absoluteX="8dp">

            <Button
                android:id="@+id/button"
                android:layout_width="330dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:layout_marginTop="60dp"
                android:background="@drawable/login"
                android:paddingLeft="20dp"

                android:paddingRight="20dp"
                android:textStyle="normal" />

            <Button
                android:layout_width="330dp"
                android:layout_height="35dp"
                android:textStyle="normal"
                android:background="@drawable/signup"
                android:layout_gravity="center"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                />
        </LinearLayout>
    </LinearLayout>



    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/showdescriptioncontenttitle"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp">

        <TextView
            android:gravity="center"
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Welcome!"
            android:textColorHint="#ffff"
            android:textSize="20dp" />

        <TextView
            android:gravity="center"
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="communicate with people all over the"
            android:textColorHint="#ffff"
            android:textSize="18dp" />

        <TextView
            android:gravity="center"
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="world with your emotions!"
            android:textColorHint="#ffff"
            android:textSize="18dp"/>
    </LinearLayout>

</RelativeLayout>